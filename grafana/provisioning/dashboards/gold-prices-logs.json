{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Gold Prices Fetcher Logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "gridPos": { "h": 18, "w": 24, "x": 0, "y": 0 },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "showCommonLabels": true,
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "prettifyJson": true
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "Loki" },
          "expr": "{job=\"docker\"} |= \"gold-prices-fetcher\"",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Errors per minute",
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "fieldConfig": { "defaults": { "custom": {} }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "single" } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (service) (rate({job=\"docker\",  stream=\"stdout\"} [1m]))"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Current Error Rate (1m)",
      "datasource": { "type": "loki", "uid": "Loki" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (service) (rate({job=\"docker\",  stream=\"stdout\"} [1m]))"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["loki", "logs", "gold"],
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "datasource": { "type": "loki", "uid": "Loki" },
        "refresh": 1,
        "query": "label_values({job=\"docker\"}, container)",
        "includeAll": true,
        "multi": true,
        "label": "Container"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "Gold Prices Logs",
  "uid": "gold-prices-logs"
}
